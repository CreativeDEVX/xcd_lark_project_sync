<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Settings View -->
  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.lark</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
    <field name="priority" eval="50"/>
    <field name="arch" type="xml">
      <xpath expr="//form[1]" position="inside">
        <app name="lark_project_sync" data-string="Lark" string="Lark" groups="base.group_system">
          <block title="Lark API Management">
            <setting id="lark_api_config_setting" help="Select or create a new Lark API configuration">
            <field name="lark_api_id" class="oe_inline" options="{'no_create': False, 'no_open': False}"/>
            </setting>
          </block>
        </app>
      </xpath>
    </field>
  </record>
  
  <!-- Action to open settings -->
  <record id="lark_settings_action" model="ir.actions.act_window">
    <field name="name">Lark Settings</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">res.config.settings</field>
    <field name="view_mode">form</field>
    <field name="target">inline</field>
    <field name="view_id" ref="res_config_settings_view_form"/>
  </record>
  
  <!-- Menu Items -->
  <menuitem id="menu_lark_root" name="Lark" sequence="10"/>
  
  <menuitem id="menu_lark_config" 
            name="Settings" 
            parent="menu_lark_root" 
            action="lark_settings_action"
            sequence="10"/>
</odoo>
